# ======================
# Backend
# ======================
NODE_ENV=development
PORT=4000

# Docker compose uses `db` as hostname
DATABASE_URL=postgresql://postgres:postgres@db:5432/health_monitor?schema=public

# JWT secrets must be >= 32 chars (see `backend/.env.example` for generator)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-characters-long
JWT_REFRESH_EXPIRES_IN=30d

# Chatbot
# Local Qwen router server (see `qwen_router_server.py`)
QWEN_API_URL=http://localhost:8081
# External LLM (fill later)
GEMINI_API_KEY=

# MQTT (Optional)
# MQTT_BROKER_URL=mqtt://localhost:1883
# MQTT_USERNAME=
# MQTT_PASSWORD=

# CORS (comma-separated allowed origins)
CORS_ORIGIN=http://localhost:3000

# ======================
# Frontend
# ======================
# Note: default API base is `/api`
NEXT_PUBLIC_API_URL=http://localhost:4000/api
NEXT_PUBLIC_WS_URL=ws://localhost:4000

# Optional integrations
MAPBOX_TOKEN=your_mapbox_token
RAG_INDEX_URL=https://rag-endpoint.example.com
VOICE_API_URL=https://voice-endpoint.example.com
TELEGRAM_BOT_TOKEN=telegram_token
ZALO_OA_TOKEN=zalo_token
